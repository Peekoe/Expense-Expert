<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your App</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
</head>
<div class ="text-center">
<div class="dark:bg-black py-2 ring-1 ring-slate-900/5 shadow-xl h-full">

<body>
  {{#if currentUser}}
    <a class="text-3xl font-bold text-green-300 hover:text-green-500" href="/user/logout">Logout</a>
  {{else}}
<div class="p-8">
    <a class="text-3xl font-bold text-green-300 hover:text-green-500 p-21" href="/user/signup">Sign up </a>  &nbsp;
    <a class="text-3xl font-bold text-green-300 hover:text-green-500 p-2" href="/user/login">Log in </a> &nbsp;
    <a class="text-3xl font-bold text-green-300 hover:text-green-500 p-2" href="/about">About</a>
   

    </div>
        </div>

    
  {{/if}}
  {{!-- Show errors --}}
  {{#if flashErrors }}
    {{#each flashErrors }}
      <div>{{ this }}</div>
    {{/each}}
  {{/if}}
  {{!-- Show success messages --}}
  {{#if flashSuccesses }}
    {{#each flashSuccesses }}
      <div>{{ this }}</div>
    {{/each}}
  {{/if}}
  {{> yield }}
  {{#if isPageAuthor}}
    {{!-- Prevent loading the Remake framework if the page isn't editable --}}
    <script src="/assets/js/vendor/Sortable.min.js"></script>
    <script src="/assets/js/vendor/crostini.min.js"></script>
    <script src="/remake/js/remake.min.js"></script>
    <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  <script src="/assets/js/main.js"></script>
</body>


<div>
  </div>
</html>

